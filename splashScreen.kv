MDScreen:
    name: "SplashScreen"
    on_enter: self.ids.progress.start()
    MDBoxLayout:
        MDFloatLayout:
            BoxLayout:
                pos_hint:{'center_y': -.1, 'center_x': .5}
                padding: "10dp"
                size_hint_x: .7
                size_hint_y: -.5

                MDProgressBar:
                    id: progress
                    orientation: "horizontal"
                    type: "indeterminate"
                    running_duration: 1
                    catching_duration: 1
            BoxLayout:
                pos_hint:{'center_x': 1, 'center_y': .2}
                MDLabel:
                    id: download_label
                    text: "0/3"
                    color: 0,0,0,1