MDScreen:
    name: "SplashScreen"
    on_enter: self.ids.progress.start()
    MDBoxLayout:
        MDFloatLayout:
            BoxLayout:
                pos_hint:{'center_y': -.1, 'center_x': .5}
                padding: "10dp"
                size_hint_x: .7
                size_hint_y: -.5

                MDProgressBar:
                    id: progress
                    orientation: "horizontal"
                    type: "indeterminate"
                    running_duration: 1
                    catching_duration: 1